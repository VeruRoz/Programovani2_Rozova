<Window x:Class="WPF_Hungry_Horace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Hungry_Horace"
        mc:Ignorable="d"
        Title="Hungry Horace" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Grid> 

        <!-- Úvodní obrazovka -->
        <Grid x:Name="Start" Visibility="Visible" Background="#FF2E2E2E">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="Hungry Horace"
                           Foreground="White"
                           FontSize="48"
                           FontWeight="Bold"
                           TextAlignment="Center"/>
                <Button x:Name="StartBTN"
                        Content="▶ Start Game"
                        Width="200"
                        Height="60"
                        FontSize="24"
                        Click="StartBTN_Click"
                        Background="#FF4CAF50"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- Herní obrazovka -->
        <Grid x:Name="GameLevel_1" Visibility="Hidden" Background="#FF111111">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="Skore"
                       Text="0"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="20"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>

           
        </Grid>

        <!-- Výherní obrazovka -->
        <Grid x:Name="Win" Visibility="Hidden" Background="#FF1B5E20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🎉 You win!"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Proherní obrazovka -->
        <Grid x:Name="lost" Visibility="Hidden" Background="#FFB71C1C">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="💀 You lose"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
